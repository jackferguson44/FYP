<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bookImageList"
                android:layout_width="130dp"
                android:layout_height="160dp"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/bookTitleList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@id/bookImageList"
                android:padding="3dp"
                android:text="Book Title"
                android:textColor="@color/colorPrimary"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/publisherList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookTitleList"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@id/bookImageList"
                android:padding="3dp"
                android:text="Publisher"
                android:textColor="@color/colorPrimary"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/pageCountList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/publisherList"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@id/bookImageList"
                android:padding="3dp"
                android:text="Page count"
                android:textColor="@color/colorPrimary"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/bookReleaseDateList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pageCountList"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/bookImageList"
                android:layout_marginEnd="5dp"
                android:padding="3dp"
                android:text="Date"
                android:textColor="@color/colorPrimary"
                android:textSize="11sp" />

<!--            <Button-->
<!--                android:id="@+id/removeFromListButton"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@+id/bookReleaseDateList"-->
<!--                android:layout_marginTop="3dp"-->
<!--                android:layout_toEndOf="@+id/bookImageList"-->
<!--                android:layout_marginEnd="5dp"-->
<!--                android:padding="3dp"-->
<!--                android:text="Remove From List" />-->

        </RelativeLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>