<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:id="@+id/linearLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/discoverBookText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover Books"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:layout_gravity="center"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bookDiscoverList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linearLay" />

        <TextView
            android:id="@+id/discoverBookText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover Books"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:layout_gravity="center"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bookDiscoverList2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linearLay" />

        <TextView
            android:id="@+id/discoverBookText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover Books"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:layout_gravity="center"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bookDiscoverList3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linearLay" />


    </LinearLayout>




</RelativeLayout>